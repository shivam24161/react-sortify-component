{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["ES2015", "DOM"]
  },
  "include": [
    "./*.ts",
    "./*.tsx",
    "../utilities/*.ts",
    "../utilities/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 